# Backend Environment Variables Template
# Copia este ficheiro para .env e preenche com os teus valores

# Google Gemini API
GEMINI_API_KEY=sua_chave_gemini_aqui

# Stripe (modo teste para desenvolvimento)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Frontend URLs (separadas por vírgula)
# Desenvolvimento:
FRONTEND_URLS=http://localhost:3000,http://127.0.0.1:3000

# Produção (substitui com os teus domínios):
# FRONTEND_URLS=https://tudominio.com,https://www.tudominio.com

# Servidor
PORT=5001
DEBUG=true

# Rate Limiting (opcional)
# Desenvolvimento: memory://
# Produção: redis://localhost:6379
RATE_LIMIT_STORAGE=memory://

